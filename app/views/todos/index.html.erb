<%= render 'shared/nav' %>

<% if logged_in? %>
  <%= link_to 'Create New Todo', new_todo_path %>

  <h2>All Todos</h2>

  <ul>
    <% @incomplete_todos.each do |todo| %>
      <%= render 'todo_item', todo: todo %>
    <% end %>

    <% @completed_todos.each do |todo| %>
      <%= render 'todo_item', todo: todo %>
    <% end %>
  </ul>
<% end %>