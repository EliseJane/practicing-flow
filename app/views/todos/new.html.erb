<h3>New Todo</h3>

<div class="span8 well">
  <%= form_for @todo do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="control-group">
      <%= label_tag :month %>
      <%= select_tag :month, 1..12 %>

      <%= label_tag :day %>
      <%= select_tag :day, 1..31 %>

      <%= label_tag :year %>
      <%= select_tag :year, Time.now.year..2030 %>
    </div>

    <%= f.submit %>
  <% end %>
</div>
