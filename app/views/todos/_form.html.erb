<%= render 'errors', obj: @todo %>

<div class="span8 well">
  <%= form_for @todo do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="control-group">
      <%= label_tag :month %>
      <%= select_tag :month, options_for_select(1..12, (@todo.duedate && @todo.duedate.month) || 1) %>

      <%= label_tag :day %>
      <%= select_tag :day, options_for_select(1..31, (@todo.duedate && @todo.duedate.day) || 1)%>

      <%= label_tag :year %>
      <%= select_tag :year, options_for_select(Time.now.year..2050, (@todo.duedate && @todo.duedate.year) || Time.now.year) %>
    </div>

    <%= f.submit %>
  <% end %>
</div>
